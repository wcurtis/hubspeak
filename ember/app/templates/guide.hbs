<div class="guide-template">

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Submit a Place</h4>
        </div>
        <div class="modal-body modal-body-submit">
          <form role="form">
            <div class="row">
              <div class="form-group col-xs-6">
                <label for="exampleInputEmail1">City</label>
                {{input type="text" value=city class="form-control" placeholder="Seattle"}}
              </div>
              <div class="form-group col-xs-6">
                <label for="exampleInputEmail1">Country</label>
                {{input type="text" value=country class="form-control" placeholder="USA"}}
              </div>
            </div>
            <div class="form-group">
              <label>Comments</label>
              {{textarea value=comment class="form-control" rows="3"}}
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          {{#if isSaving}}
            <button {{action 'submitNewPlace'}} disabled=true type="button" class="btn btn-primary">Submitting</button>
          {{else}}
            <button {{action 'submitNewPlace'}} type="button" class="btn btn-primary">Submit Place</button>
          {{/if}}
        </div>
      </div>
    </div>
  </div>

</div>